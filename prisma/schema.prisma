generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id          Int            @id @default(autoincrement())
  username    String         @unique @db.VarChar(25)
  password    String
  files       File[]
  sharedFiles Shared_Files[]
}

model File {
  id           String        @id @default(uuid()) @db.Uuid
  name         String
  ownerId      Int
  path         String?
  type         MIME_TYPE
  parentId     String?       @db.Uuid
  owner        User          @relation(fields: [ownerId], references: [id])
  parent       File?         @relation("parent", fields: [parentId], references: [id], onDelete: Cascade)
  children     File[]        @relation("parent")
  Shared_Files Shared_Files?

  @@unique([parentId, name])
}

model Shared_Files {
  fileId    String   @id @db.Uuid
  expiresAt DateTime
  ownerId   Int
  file      File     @relation(fields: [fileId], references: [id])
  owner     User     @relation(fields: [ownerId], references: [id])
}

enum MIME_TYPE {
  DIR
  FILE
}
